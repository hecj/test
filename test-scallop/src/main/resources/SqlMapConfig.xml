      <property name="JDBC.Driver" value="com.mysql.jdbc.Driver"/>
      <property name="JDBC.ConnectionURL" value="jdbc:mysql://121.40.56.87:3306/resources?useUnicode=true"/>
      <property name="JDBC.Username" value="resource"/>
      <property name="JDBC.Password" value="resource"/>
